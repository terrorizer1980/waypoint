<li>
  {{#if (or this.isEditing this.isCreating)}}
    <form class="pds-form" {{on "submit" this.saveVariable}}>
      <div part="fields" class="card">
        <div class="card-header">
          <h4>{{t "form.project_variables_settings.title"}}</h4>
        </div>
        <fieldset class="pds-formFieldSet">
          <div class="pds-formField">
            <label for="input-variable-name" class="pds-fieldName">
              {{t "form.project_variables_settings.variable_name"}}
            </label>
            <Pds::Input
              @type="text"
              id="input-variable-name"
              placeholder={{t "form.project_variables_settings.variable_name_placeholder"}}
              value={{this.variable.name}}
              {{on "input" (pick "target.value" (set this "variable.name"))}}
            />
          </div>
          <div class="pds-formField">
            <label for="input-variable-value" class="pds-fieldName">
              {{t "form.project_variables_settings.variable_value"}}
            </label>
            <div class="pds-formField__input-inline-toggle">
              {{#if this.isHcl}}
                <Pds::Input
                  @type="text"
                  id="input-variable-value"
                  placeholder={{t "form.project_variables_settings.variable_value_placeholder"}}
                  value={{this.variable.hcl}}
                  {{on "input" (pick "target.value" (set this "variable.hcl"))}}
                />
              {{else}}
                <Pds::Input
                  @type="text"
                  id="input-variable-value"
                  placeholder={{t "form.project_variables_settings.variable_value_placeholder"}}
                  value={{this.variable.str}}
                  {{on "input" (pick "target.value" (set this "variable.str"))}}
                />
              {{/if}}
              <span class="pds-input-inline-toggle">
                <input
                  type="checkbox"
                  id="input-variable-hcl"
                  checked={{this.isHcl}}
                  {{on "change" (fn this.toggleHcl this.variable)}}>
                  <label for="input-variable-hcl">HCL</label>
              </span>
            </div>
          </div>
        </fieldset>
        <div class="card-footer">
          <Pds::ButtonSet>
            <Pds::Button @variant="primary" @type="submit">{{t "form.project_variables_settings.button_submit"}}</Pds::Button>
            <Pds::Button @variant="secondary" {{on "click" (fn this.cancelCreate)}}>{{t "form.project_variables_settings.button_cancel"}}</Pds::Button>
          </Pds::ButtonSet>
        </div>
      </div>
    </form>
  {{else}}
    <div class="project-input-variables--list-item">
      <span class="project-input-variables--list-item-name">{{this.variable.name}}</span>
      <span class="project-input-variables--list-item-value">
        {{#if this.variable.str}}
          {{this.variable.str}}
        {{else}}
          <b class="badge">
            HCL
          </b>
          {{this.variable.hcl}}
        {{/if}}
      </span>
      <Pds::Dropdown @align="right" as |D|>
        <D.Trigger @variant="ghost">
          Actions
        </D.Trigger>
        <D.Dialog >
          <section>
            <Pds::Button @variant="secondary" {{on "click" (fn this.editVariable this.variable)}}>
              Edit
            </Pds::Button>
            <Pds::Button @variant="warning" {{on "click" (fn this.deleteVariable this.variable)}}>
              Delete
            </Pds::Button>
          </section>
        </D.Dialog>
      </Pds::Dropdown>
    </div>
  {{/if}}
</li>
